- current_page_number = page.posts.current_page_index + 1
div.pagination style='text-align: center'
  ul
    - if page.posts.previous_page
      li
        a href="#{site.blog_path}/"
          i.icon-fast-backward
      li
        a href=page.posts.previous_page.url
          i.icon-step-backward
    - if !page.posts.previous_page
      li.disabled
        a href='#'
          i.icon-fast-backward
      li.disabled
        a href='#'
          i.icon-step-backward
    - if current_page_number > 3
      li.disabled
        a href='#' ...
      li
        a href="#{site.blog_path}/page/#{current_page_number - 2}" =current_page_number - 2
    - if current_page_number == 3
      li
        a href="#{site.blog_path}/" =(current_page_number - 2)
    - if current_page_number > 2
      li
        a href="#{site.blog_path}/page/#{current_page_number - 1}" =current_page_number - 1
    - if current_page_number == 2
      li
        a href="#{site.blog_path}/" =current_page_number - 1
    li.active
      a href='#' #{current_page_number} of #{page.posts.pages.size}
    - if (page.posts.pages.size - current_page_number) > 0
      li
        a href="#{site.blog_path}/page/#{current_page_number + 1}" =current_page_number + 1
    - if (page.posts.pages.size - current_page_number) > 1
      li
        a href="#{site.blog_path}/page/#{current_page_number + 2}" =current_page_number + 2
    - if (page.posts.pages.size - current_page_number) > 2
      li.disabled
        a href='#' ...
    - if page.posts.next_page
      li
        a href=page.posts.next_page.url
          i.icon-step-forward
      li
        a href="#{site.blog_path}/page/#{page.posts.pages.size}"
          i.icon-fast-forward
    - if !page.posts.next_page
      li.disabled
        a href='#'
          i.icon-step-forward
      li.disabled
        a href='#'
          i.icon-fast-forward
